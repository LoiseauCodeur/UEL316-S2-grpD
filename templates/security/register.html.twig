{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="min-h-[80vh] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow-md">
        <div>
            <h2 class="text-center text-3xl font-extrabold text-gray-900">
                Créer un compte
            </h2>
        </div>

        {{ form_start(registrationForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}
            <div class="rounded-md shadow-sm space-y-4">
                <div>
                    {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {
                        'class': 'mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500'
                    }}) }}
                    {{ form_errors(registrationForm.email, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                </div>

                <div>
                    {{ form_label(registrationForm.name, 'Nom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(registrationForm.name, {'attr': {
                        'class': 'mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500'
                    }}) }}
                    {{ form_errors(registrationForm.name, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                </div>

                <div>
                    {{ form_label(registrationForm.firstname, 'Prénom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(registrationForm.firstname, {'attr': {
                        'class': 'mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500'
                    }}) }}
                    {{ form_errors(registrationForm.firstname, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                </div>

                <div>
                    {{ form_label(registrationForm.password, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(registrationForm.password, {'attr': {
                        'class': 'mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500'
                    }}) }}
                    {{ form_errors(registrationForm.password, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                </div>
            </div>

            <div>
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    S'inscrire
                </button>
            </div>
        {{ form_end(registrationForm) }}

        <div class="mt-6 text-center">
            <p class="text-sm text-gray-600">
                Déjà inscrit ?
                <a href="{{ path('app_login') }}" class="font-medium text-blue-600 hover:text-blue-500">
                    Connectez-vous
                </a>
            </p>
        </div>
    </div>
</div>
{% endblock %}